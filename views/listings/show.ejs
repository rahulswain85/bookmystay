<% layout("/layouts/boilerplate.ejs") %>
<body>


    <h1><%= listing.title %></h1>


    <div class="card mb-3">
        <img src="<%= listing.image %>" class="card-img-top show-image" alt="...">
        <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="card-text"><%= listing.description %></p>
            <p class="card-text"><b>Price:</b> ₹ <%= listing.price.toLocaleString("en-IN") %></p>
            <p class="card-text"><small class="text-body-secondary"><%= listing.location %>, <b><%= listing.country %></b></small></p>
        </div>
    </div>
    <div class="edit-del">
        <form method="get" action="/listings/<%= listing._id %>/edit">
        <button class="btn btn-dark">Edit</button>
    </form>

    <form method="post" action="/listings/<%= listing._id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this?')">
        <button class="btn btn-dark" id="del" >Delete</button>
    </form>
    </div>
    <hr>
    <div class="ratings-form">
        <form method="post" action="/listings/<%= listing._id %>/reviews" class="needs-validation" novalidate>
        <h4>Post a review</h4>
        <label for="rating" class="form-label">Rating</label>
        <input type="range" min="1" max="5" value="1" class="form-range" id="range4" name="ratings"/>
        <output for="range4" id="rangeValue" aria-hidden="true"></output><br><br>
        <textarea placeholder="Write a review........" cols="100" rows="5" class="form-control " name="comment" required></textarea>
        <div class="invalid-feedback">Please write a short review</div>
        <br>
        <button class="btn btn-dark">Post</button>
    </form></div>

    <div class="ratings mb-3 p-4">
        <h2>Customer Reviews</h2>
        <% for (review of listing.reviews){%>
            <div class="row-3">
                <div class="card card-style col-6" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">User</h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary"><b>Ratings: </b><%= review.ratings %> ⭐</h6>
                    <p class="card-text"><i><%= review.comment %></i></p>
                    <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id%>?_method=DELETE">
                        <button class="btn btn-dark del-btn">Delete</button>
                    </form>
                    
                </div>
            </div>
            </div>
            
        
        <%}%>
    </div>

    <script>
  
  const rangeInput = document.getElementById('range4');
  const rangeOutput = document.getElementById('rangeValue');

  rangeOutput.textContent = rangeInput.value;

  rangeInput.addEventListener('input', function() {
    rangeOutput.textContent = this.value;
  });
</script>
</body>


