<% layout("/layouts/boilerplate.ejs") %>
<body>

    <div class="row">
        <div class="col-8 offset-2">
        <h3>Edit <%= currListing._id %></h3>
        <form method="post" action="/listings/<%= currListing._id %>?_method=PUT">

        <div>
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" value="<%=currListing.title%>" class="form-control"/>
        </div>
        

        <div>
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control"><%=currListing.description%></textarea>
        </div>


        

        <div>
            <label for="image" class="form-label">Image-URL</label>
            <input name="listing[image]" value="<%=currListing.image%>" class="form-control"/>
        </div>
        

        <div>
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" value="<%=currListing.price%>" class="form-control""/>
        </div>


        

        <div>
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" value="<%=currListing.location%>" class="form-control""/>
        </div>
        

        <div>
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" value="<%=currListing.country%>" class="form-control""/>
        </div>
        <br>
        
        <button class="btn btn-dark edit-btn">Update</button>
    </form>
    </div>
    </div>
    <br><br>
</body>
