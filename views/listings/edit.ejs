<% layout("/layouts/boilerplate.ejs") %>
<body>

    <div class="row">
        <div class="col-8 offset-2">
        <h3>Edit <sub><%= currListing._id %></sub></h3>
        <form enctype="multipart/form-data" method="post" class="needs-validation" novalidate action="/listings/<%= currListing._id %>?_method=PUT">

        <div>
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" value="<%=currListing.title%>" class="form-control" required/>
        </div>
        

        <div>
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" required class="form-control"><%=currListing.description%></textarea>
        </div>

        <div>
            <p>Original Listing Image</p>
            <img src="<%=originalImageUrl%>"/>
        </div>
        

        <div>
            <label for="image" class="form-label">Upload New Image</label>
            <input type="file" name="listing[image]" class="form-control"/>
        </div>
        

        <div>
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" required value="<%=currListing.price%>" class="form-control""/>
        </div>


        

        <div>
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" required value="<%=currListing.location%>" class="form-control""/>
        </div>
        

        <div>
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" required value="<%=currListing.country%>" class="form-control""/>
        </div>
        <br>
        
        <button class="btn btn-dark edit-btn">Update</button>
    </form>
    </div>
    </div>
    <br><br>
</body>
