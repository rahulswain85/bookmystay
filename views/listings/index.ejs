        <div class="filter">
            <div>
                <i class="fa-solid fa-sailboat"></i>
                <p>Island</p>
            </div>
        </div>
        <div id="taxToggle">
            <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
        </div>
        </div>
    </div>
    <!-- <h2>All Listings</h2> -->

    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListing){ %>
        <a href="/listings/<%= listing._id %>">
    <div class="card col">
        <img src="<%= listing.image.url %>" class="card-img-top" style="height: 20rem;" alt="...">
        <div class="card-img-overlay">
            <h5 class="card-title"><%= listing.location %></h5>
            <p class="card-text"><%= listing.country %></p>
        </div>
        <div class="card-body">
            <p class="card-text"><p><b><%= listing.title %></b></p>
            <p id="price">
            <b>â‚¹ </b>
            <span class="listing-price"><%= listing.price.toLocaleString("en-IN") %></span> 
            /night
            </p>
        <i class="GST">&nbsp;&nbsp;+18% GST</i></p>
        </div>
    </div>
    </a>
    <%}%>
    </div>


    <script>
        
        let taxSwitch = document.getElementById("switchCheckDefault");
        let currentPrice = document.getElementById("price");
        taxSwitch.addEventListener("click", ()=>{
            // let currentPrice = document.getElementsByClassName
            let gstLable = document.getElementsByClassName("GST");
            for(lable of gstLable){
                if(lable.style.display !== "inline"){
                    lable.style.display = "inline";
                }
                else{
                    lable.style.display = "none";
                }
                
            }
            
        })
    </script>

