<% layout("/layouts/boilerplate.ejs") %>
<style>
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }

    .filter {
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
    }

    .filter p{
        font-size: 0.8rem;
    }

    .filter:hover{
        opacity: 1;
        text-decoration: underline;
        cursor: pointer;
    }

    .GST {
        display: none;
    }

    #taxToggle{
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 2rem;
        display: flex;
        align-items: center;
    }
</style>
