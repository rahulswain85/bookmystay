<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-6 offset-3">
            <form action="/signup" method="post" novalidate>
                <h2 class="col-8 offset-3">Sign Up - Book My Stay</h2>
                <div >
                    <label for="username" class="form-label">Username: </label>
                    <input name="username" id="username" placeholder="Enter username" class="form-control" required/>
                    <div class="valid-feedback">username looks good</div>
                </div> 
                <div >
                    <label for="email" class="form-label">Email: </label>
                    <input name="email" id="email" placeholder="Enter email" class="form-control" required/>
                    <div class="valid-feedback">email looks good</div>
                </div> 

                <div >
                    <label for="password" class="form-label">Password: </label>
                    <input type="password" name="password" id="password" placeholder="Enter password" class="form-control" required/>
                    <div class="valid-feedback">password looks good</div>
                </div> 
                <br>
                <button class="btn btn-success">Sign Up</button>
            </form>
        </div>    
    </div>
</body>